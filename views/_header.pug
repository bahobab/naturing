header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours

  .header__logo
    img(src='/img/logo-white.png' alt='tours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--cta.logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name.split(' ')[0]}`)
        //- img.nav__user-img(src=`/img/users/default.jpg` alt=`Photo`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--cta(href='/login') Login
      a.nav__el.nav__el--cta(href='/signup') Sign up